<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.xplicit.calculator.viewmodel.CalculatorViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black_05"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="3dp"
                android:textSize="13sp"
                tools:text="error message" />

            <TextView
                android:id="@+id/specialNotification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_toEndOf="@id/errorMessage"
                android:layout_toRightOf="@id/errorMessage"
                android:layout_toStartOf="@id/degNotification"
                android:layout_toLeftOf="@id/degNotification"
                android:paddingHorizontal="10dp"
                android:paddingTop="3dp"
                android:textSize="13sp"
                tools:text="@string/xrt"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/degNotification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="10dp"
                android:paddingTop="3dp"
                android:textSize="13sp"
                tools:text="DEG" />

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:background="@color/black_05"
            android:scrollbars="none">

            <TextView
                android:id="@+id/punch_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:autoSizeMaxTextSize="40sp"
                android:autoSizeMinTextSize="30sp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:fontFamily="@font/poppins_regular"
                android:minWidth="150dp"
                android:padding="10dp"
                android:text="@{viewModel.displayExp}"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat"
                tools:text="@string/app_name" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/resultScreen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:fontFamily="@font/poppins_light"
            android:autoSizeMaxTextSize="55sp"
            android:autoSizeMinTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:background="@color/black_05"
            android:gravity="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@{viewModel.result}"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            tools:text="0.0" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/keypad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.2" />
    </LinearLayout>
</layout>
