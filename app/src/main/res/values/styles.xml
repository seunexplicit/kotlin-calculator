<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.Calculator.Button" parent="">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="layout_constraintWidth_max">60dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="backgroundTint">@color/black_05</item>
        <item name="iconTint">@color/black</item>
    </style>


    <style name="ShapeAppearanceOverlay.Calculator.Button.Operators">
        <item name="android:textColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
    </style>

    <style name="ShapeAppearance.Calculator.Operator.DynamicSize" parent="ShapeAppearanceOverlay.Calculator.Button.Operators">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ShapeAppearance.Calculator.Operator.DynamicSize.L">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.Calculator.Button.L">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.Calculator.Button.Operators.L">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    <style name="EqualTo.Button" parent="ShapeAppearanceOverlay.Calculator.Button.Operators.L">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="layout_constraintDimensionRatio">0</item>
        <item name="layout_constraintHeight_max">0dp</item>
    </style>


