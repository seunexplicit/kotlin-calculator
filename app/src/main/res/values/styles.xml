<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.Calculator.Button" parent="">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="backgroundTint">@color/black_05</item>
        <item name="iconTint">@color/black</item>
    </style>


    <style name="ShapeAppearanceOverlay.Calculator.Button.Operators">
        <item name="android:textColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
    </style>

    <style name="ShapeAppearanceOverlay.Calculator.Button.Advance">
        <item name="backgroundTint">@color/primary</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="LargeButton" parent="ShapeAppearanceOverlay.Calculator.Button.Advance">
        <item name="android:background">@null</item>
        <item name="cornerRadius">30dp</item>
    </style>
</resources>